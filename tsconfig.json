{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "typeRoots": ["src/config/global.d.ts", "./node_modules/@types"],
    "plugins": [{ "transform": "ts-transformer-keys/transformer" }]
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules"],
  "compileOnSave": false,
  "ts-node": { "compiler": "ttypescript" }
}
